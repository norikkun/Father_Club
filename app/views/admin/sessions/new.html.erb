<%= render 'layouts/alert'%>
<div class="container text-center">
  <div class="row">
    <h2 class="col">管理者ログイン</h2>
  </div>
  

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="my-3">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "〇〇〇＠〇〇〇", size: "30"  %>
    </div>
  
    <div class="my-3">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password", size: "30" %>
    </div>
  
    <div class="my-3">
        <%= f.submit "ログイン", class: "btn btn-success"  %>
      </div>
  <% end %>