<%= render 'layouts/search' %>
<div class="container text-center">
  <div class="row">
    <%= image_tag @user.get_user_image(100, 100), class: "rounded-circle mx-auto d-block mb-3" %>
  </div>
  <div>
    <h2 class="col-auto mx-auto mb-4"><%= @user.name %></h2>
    <p class="new_line mb-3"><%= @user.introduction%></p>
      <h3>メールアドレス</h3>
      <h4 class="mb-3"><%= @user.email %></h4>
  </div>
  <div>
    <h4>
      <% if @user.is_active %>
        <strong class="text-success">有効</strong>
       <% else %>
        <strong class="text-muted">退会</strong>
      <% end %>
    </h4>
  </div>
  <div>
    <%= link_to "編集する",edit_admin_user_path(@user),class: "btn btn-success fas fa-user-cog mb-5 edit_user_#{@user.id}" %>
  </div>
  <div>
    <h2>投稿一覧</h2>
  </div>
  <div>
    <% @posts.each do |post| %>
    <%= render '/public/posts/posts', post: post%>
  <% end %>
  </div>
</div>