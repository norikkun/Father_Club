<!DOCTYPE html>
<html>
  <head>
    <title>Father_Club</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/4eba34043b.js" crossorigin="anonymous"></script>
  </head>

  <body style="background-color: #EEFFFF;">
    <header class="container-fuild fixed-top w-100", style="background-color: #B3ECFA;" >
      <div class="row d-flex justify-content-between align-items-center">
        <% if admin_signed_in? %>
        
        <% elsif user_signed_in? %>
          <div class="col">
            <%= link_to user_path(current_user.id) do %>
              <% if current_user.user_image.attached? %>
                <%= image_tag current_user.user_image, size: "50x50", class: "rounded-circle img-fluid ml-4" %>
              <% else %>
                <%= image_tag 'no_image.jpg', size: "50x50", class: "rounded-circle img-fluid ml-4" %>
              <% end %>
            <% end %>
          </div>
          <div class="col-6 d-flex justify-content-center">
            <%= link_to root_path do %>
              <%= image_tag "header.png", class: "col-auto mx-auto img-fluid"%>
            <% end %>
          </div>
          <div class="col d-flex justify-content-end">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-white" %>
            <div class="col-1"></div>
          </div>
        <% else %>
        <div class="col"></div>
          <div class="col-6 d-flex justify-content-center">
            <%= link_to root_path do %>
              <%= image_tag "header.png", class: "mx-auto img-fluid"%>
            <% end %>
          </div>
          <div class="col d-flex justify-content-end">
            <%= link_to "ログイン", new_user_session_path, class: "text-white" %>
            <div class="col-1"></div>
          </div>
        <% end %>
      </div>
    </header>
    <main class="mb-auto", style="margin-top: 100px; padding-bottom: 60px;">
      <%= yield %>
    </main>
    
    <footer class="footer fixed-bottom" style="background-color: #B3ECFA;">
      <div class="container mt-3">
        <nav class="row">
          <div class="col">
            <ul class="d-flex justify-content-center list-unstyled">
              <% if admin_signed_in? %>
              
              <% elsif user_signed_in? %>
                <li class="mx-3">
                  <%= link_to posts_path do %>
                    <i class="fa-solid fa-house" style="color: white;"> 一覧</i>
                  <% end %>
                </li>
                <li class="mx-3">
                  <%= link_to new_post_path do %>
                    <i class="fa-solid fa-plus" style="color: white;"> 投稿</i>
                  <% end %>
                </li>
                <% else %>
                <li class="mx-3">
                  <%= link_to posts_path do %>
                    <i class="fa-solid fa-house" style="color: white;"> 一覧</i>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>
    </footer>
  </body>
</html>
