
<div class="text-right", style="font-size: clamp(10px, 3vw, 16px);;">
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <%= f.search_field :word, value: params[:word], placeholder: "空欄検索で一覧表示" %>
    <%= f.select :range, options_for_select([['ユーザー名で検索', :user], ['投稿タイトル名で検索', :post]], params[:range]) %>
    <%= f.submit "検索", class: "btn btn-primary btn-sm px-3" %>
  <% end %>
</div>