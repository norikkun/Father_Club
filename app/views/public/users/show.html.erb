<%= render 'layouts/alert'%>
<div class="container text-center">
  <div class="row">
    <%= image_tag @user.get_user_image(100, 100), class: "rounded-circle mx-auto d-block mb-3" %>
  </div>
  <div>
    <h2 class="col-auto mx-auto mb-4"><%= @user.name %></h2>
    <p class="introduction mb-3"><%= @user.introduction%></p>
    <% if @user == current_user %>
      <h3>メールアドレス</h3>
      <h4 class="mb-3"><%= @user.email %></h4>
    <% end %>
  </div>
  
  <div>
    <% if @user == current_user %>
      <%= link_to "編集する", edit_user_path(@user), class:"btn btn-success mb-3" %>
    <% end %>
  </div>
  <div>
    <%= link_to user_posts_path(@user), class: "btn btn-info" do %>
    <%= @user.name %>の投稿一覧
    <% end %>
  </div>
</div>