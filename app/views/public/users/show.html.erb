<div class="container text-center">
  <div class="row">
    <%= image_tag @user.get_user_image(100, 100), class: "rounded-circle mx-auto d-block mb-3" %>
  </div>
  <div>
    <h2 class="col-auto mx-auto mb-4"><%= @user.name %></h2>
    <p class="new_line mb-3"><%= @user.introduction %></p>
    
    <div>
      <%= link_to user_followings_path(@user) do %>
        <p>フォロー数: <%= @user.followings.count %></p>
      <% end %>
      
      <%= link_to user_followers_path(@user) do %>
        <p>フォロワー数: <%= @user.followers.count %></p>
      <% end %>
    </div>
  
    <% if @user == current_user %>
      <h3>メールアドレス</h3>
      <h4 class="mb-3"><%= @user.email %></h4>
    <% end %>
    
  </div>
  
  <div>
    <%= render "public/relationships/follow", user: @user %>
  </div>
  
  <div>
    <% if @user == current_user %>
      <%= link_to "編集する", edit_user_path(@user), class: "btn btn-success fas fa-user-cog mb-5" %>
    <% end %>
  </div>
  <div>
    <h2>投稿一覧</h2>
  </div>
  <div>
    <% @posts.each do |post| %>
      <%= render '/public/posts/posts', post: post %>
    <% end %>
  </div>
</div>