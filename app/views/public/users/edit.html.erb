<%= render 'layouts/alert'%>
<div class="container text-center">
  <div class="row">
    <h2 class="col-auto mx-auto px-4 mb-5">ユーザー情報編集</h2>
  </div>

  <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
    <div class="row d-flex justify-content-center">
      <div>
        <p class="mb-3">プロフィール画像変更</p>
        <div class="mb-3"><%= f.file_field :user_image, accept: "image/*" %></div>
      </div>
    </div>
    <div>
      <div>
        <p class="mb-3">ニックネーム（2～10文字）</p>
        <div class="mb-3"><%= f.text_field :name, autofocus: true, autocomplete: "name"%></div>
      </div>
    </div>
    <div>
      <div>
        <p class="mb-3">メールアドレス</p>
        <div class="mb-3"><%= f.text_field :email, autofocus: true, autocomplete: "email", size: "30"%></div>
      </div>
    </div>
    <div>
      <div>
        <p class="mb-3">紹介文(100文字まで)</p>
        <div class="mb-3">
          <%= f.text_area :introduction, rows: 10, cols: 30, maxlength: 101 %>
          </div>
      </div>
    </div>
    <div class="row my-3">
      <%= f.submit '更新する', class: 'btn btn-primary col-auto mx-auto' %>
    </div>
  <% end %>
  <div class="row my-3">
    <%= link_to "退会する", users_confirm_path(@user), class: "btn btn-danger col-auto mx-auto" %>
  </div>
</div>