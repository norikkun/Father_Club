<%= render 'layouts/alert'%>
<div class="container text-center">
  <div class="row">
    <h2 class="col-auto mx-auto">新規登録画面</h2>
  </div>
  
<%= form_with model: @post, url:'/posts',method: :post do |f| %> 
  <div class="my-3">
    <p>画面を投稿できます（任意）</p>
  </div>
  <div class="my-3">
    <%= f.file_field :post_image, accept: "image/*" %>
  </div>
  <div>
    <%= f.label :title, 'タイトル（2～30字）', class: "mt-3"%>
  </div>
  <div>
    <%= f.text_area :title, rows: 2, cols: 30%>
  </div>
  <div>
    <%= f.label :body, '内容(150字まで)', class: "mt-3" %>
  </div>
  <div>
    <%= f.text_area :body, rows: 10, cols: 30, maxlength: 151 %>
  </div>
  <div class="my-3">
    <%= f.submit '投稿する',class:"btn btn-success"%>
  </div>
<% end %> 
</div>
