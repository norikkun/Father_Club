<%= flash[:notice] %>
<div class="container text-center">
  <div>
    <%= link_to user_path(@post.user) do %>
      <% if @post.user.user_image.attached? %>
        <%= image_tag @post.user.user_image, size: "60x60", class: "rounded-circle col-auto mx-auto mb-3" %>
      <% else %>
        <%= image_tag 'no_image', size: "60x60", class: "rounded-circle col-auto mx-auto mb-3" %>
      <% end %>
    <% end %>
    <%= @post.user.name %>
  </div>
  
  <% if @post.post_image.attached? %>
    <%= image_tag @post.post_image, size: "200x200" %>
  <% end %>
  <div>
    <p>タイトル</p>
      <%= @post.title %>
  </div>
  <div>
    <p>投稿内容</p>
    <%= @post.body %>
  </div>
  
  <div class="row">
    <div class="col"></div>
    <% if @post.user == current_user %>
      <%= link_to "編集する", edit_post_path(@post), class: "btn btn-success" %>
    <% end %>
    <div class="col-1"></div>
    
    <% if @post.user == current_user %>
      <%= link_to "削除する", post_path(@post), class: "btn btn-danger", method: :delete, data: { confirm: "本当に消しますか？" } %>
    <% end %>
    
    <div class="col"></div>
  </div>
  
</div>