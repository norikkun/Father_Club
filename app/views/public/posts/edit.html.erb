<%= notice %>
<div class="container text-center">
  <div>
    <h2>投稿編集画面</h2>
  </div>
    <%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>
      <div class="my-3">
        <p>画面を編集（追加）する</p>
      </div>
      <div class="my-3">
        <%= f.file_field :post_image, accept: "image/*" %>
      </div>
      <div>
        <%= f.label :title, 'タイトル', class: "mt-3"%>
      </div>
      <div>
        <%= f.text_field :title, size: "30" %>
      </div>
      <div>
        <%= f.label :body, '内容', class: "mt-3" %>
      </div>
      <div>
        <%= f.text_area :body, size: "40x9" %>
      </div>
      <div class="my-3">
        <%= f.submit '更新する',class:"btn btn-success"%>
      </div>
    <% end %>
</div>