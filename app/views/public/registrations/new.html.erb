<div class="container text-center">
  <div class="row">
    <h2 class="col">新規登録画面</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    
    <div class="my-3">
      <%= f.label :ニックネーム %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "たなかっち", size: "30"  %>
    </div>
  <%= flash[:notice] %>
    <div class="my-3">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "〇〇〇＠〇〇〇", size: "30" %>
    </div>
  
    <div class="my-3">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", size: "30" %>
    </div>
  
    <div class="my-3">
      <%= f.label :パスワード確認%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "30" %>
    </div>
  
    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success"  %>
    </div>
  <% end %>

  <div class="row">
    <h3 class="col-auto mx-auto my-4 px-4", style="background-color: #B3ECFA;">既に登録済みの方</h3>
  </div>
  <div class="pb-5">
    <h5>
      <%= link_to "/users/sign_in" do %>
        こちら
      <% end %>
        からログインしてください。
    </h5>
  </div>
</div>
