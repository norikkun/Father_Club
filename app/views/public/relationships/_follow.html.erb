<div id="follow-form">
  <% if current_user && current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, remote: true, class: "btn btn-info" %>
    <% else %>
      <%= link_to "フォロー", user_relationships_path(user), method: :post, remote: true, class: "btn btn-success" %>
    <% end %>
  <% end %>
</div>