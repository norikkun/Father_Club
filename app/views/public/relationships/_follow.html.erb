<div id="follow-form-<%= user.id %>">
  <% if current_user && current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー解除", user_relationships_path(user), method: :delete, remote: true, class: "btn btn-info" %>
    <% else %>
      <%= link_to "フォロー", user_relationships_path(user), method: :post, remote: true, class: "btn btn-success px-4" %>
    <% end %>
  <% end %>
</div>